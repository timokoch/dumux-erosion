[TimeLoop]
TEnd = 50.0s
InitialTimeStepSize = 0.1s
MaxTimeStepSize = 10s

[Grid]
File = halfsphere.msh
#File = sphere.msh
#File = hyperbolic.msh

[Problem]
#Name = hyperbolic_symmetric
#Name = hyperbolic_evaporation
Name = half_sphere_boundary
#Name = retina
#Name = sphere_symmetric

[ModelParameters]
Omega = 8.0
PhiStar = 0.8
CorrelationLength = 0.1
FluidCompressibility = 1e-4
FieldDiffusivity = 0.004
FieldRelaxationRate = 0.01
InitialStddev = 0.3

[BoundaryConditions]
RampUpTime = 10.0s
Evaporation = false
FlowRate = 2.0

[LinearSolver]
Preconditioner.AmgAccumulationMode = AtOnce
MaxIterations = 20

[Newton]
EnablePartialReassembly = true

[Assembly]
BoxVolVarsDependOnAllElementDofs = true
