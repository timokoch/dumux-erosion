[TimeLoop]
TEnd = 50.0s
InitialTimeStepSize = 0.1s
MaxTimeStepSize = 10s

[Grid]
LowerLeft = -5 -5
UpperRight = 5 5
Cells = 100 100
Overlap = 2

[Problem]
Name = erosion_2d

[ModelParameters]
Omega = 8.0
PhiStar = 0.8
CorrelationLength = 0.15 # ζ
FluidCompressibility = 1e-4 # κ
SolidDiffusivity = 0.0 # B
FieldDiffusivity = 1.0 # D
FieldRelaxationRate = 100 # k_g
InitialStddev = 0.3

[BoundaryConditions]
RampUpTime = 10.0s
Evaporation = false
FlowRate = 0.2
InflowLength = 0.1
OutflowLength = 10.0
ObstacleType = None
JsonObstacleFile = "obstacles_2d.json"

[LinearSolver]
MaxIterations = 2000
Preconditioner.ILUOrder = 0
Preconditioner.Iterations = 1

[Newton]
EnablePartialReassembly = true

[Assembly]
BoxVolVarsDependOnAllElementDofs = true
